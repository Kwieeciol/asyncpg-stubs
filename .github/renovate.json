{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:daily",
    ":enablePreCommit",
    ":assignee(bryanforbes)",
    ":timezone(America/Chicago)",
    ":combinePatchMinorReleases"
  ],
  "rangeStrategy": "replace",
  "packageRules": [
    {
      "matchDepTypes": ["dev-dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchDepTypes": ["dev-dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dev dependencies (non-major)"
    },
    {
      "matchPackageNames": ["flake8"],
      "allowedVersions": "<6.0"
    },
    {
      "matchPackageNames": ["isort"],
      "allowedVersions": "<5.12"
    },
    {
      "matchPackageNames": ["pre-commit"],
      "allowedVersions": "<3.0"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  }
}
