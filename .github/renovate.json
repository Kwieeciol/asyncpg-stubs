{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>bryanforbes/python-workflows:library"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["flake8"],
      "allowedVersions": "<6.0"
    },
    {
      "matchPackageNames": ["isort"],
      "allowedVersions": "<5.12"
    },
    {
      "matchPackageNames": ["pre-commit"],
      "allowedVersions": "<3.0"
    },
    {
      "matchPackageNames": ["black"],
      "allowedVersions": "<23.7.0"
    },
    {
      "matchPackageNames": ["mypy"],
      "allowedVersions": "<1.5.0"
    }
  ]
}
